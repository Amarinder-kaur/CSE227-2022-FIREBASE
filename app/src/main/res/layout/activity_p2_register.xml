<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".P2RegisterActivity">
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="Enter name"
        android:id="@+id/etname"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="Enter email"
        android:id="@+id/etemail"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="Enter Password"

        android:id="@+id/etpassword"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:hint="Re-Enter Password"
        android:id="@+id/etrepassword" android:inputType="textPassword"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/but1"
        android:onClick="doRegister" android:text="Register"/>
</LinearLayout>