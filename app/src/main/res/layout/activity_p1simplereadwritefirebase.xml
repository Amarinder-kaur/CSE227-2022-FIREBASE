<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".P1SimpleReadWriteFirebase">
<LinearLayout   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:id="@+id/but" android:onClick="doRead" android:text="Read From FireBase"/>
    <EditText
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:id="@+id/viewname"  />
    </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:id="@+id/lv1" android:layout_below="@+id/but"> </ListView>

</LinearLayout>